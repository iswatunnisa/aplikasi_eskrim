<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ImageView
        android:layout_width="160dp"
        android:layout_height="130dp"
        android:id="@+id/iv_inf_gambar"
        android:src="@drawable/a1"
        android:adjustViewBounds="true"
        android:layout_weight="0.03"
        android:paddingLeft="10dp"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Nama Barang"
        android:id="@+id/tv_inf_nama"
        android:layout_above="@+id/tv_inf_harga"
        android:layout_toEndOf="@+id/iv_inf_gambar"
        android:layout_marginStart="32dp"
        android:textSize="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Rp."
        android:id="@+id/tv_inf_harga"
        android:layout_above="@+id/btn_inf_beli"
        android:layout_alignStart="@+id/tv_inf_nama"
        android:layout_marginBottom="19dp"
        android:textSize="16dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order"
        android:id="@+id/btn_inf_beli"
        android:layout_alignBottom="@+id/iv_inf_gambar"
        android:layout_alignParentEnd="true" />

</RelativeLayout>